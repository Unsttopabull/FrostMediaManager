<Window x:Class="RibbonUI.Windows.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterOwner"
        Title="InputBox" x:Name="WindowInput" Height="130" Width="300" ResizeMode="NoResize" Loaded="OnWindowLoaded" KeyDown="OnWindowKeyDown">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Target="{Binding ElementName=InputTextBox}" Content="{Binding ElementName=WindowInput, TargetNullValue=Enter text:, FallbackValue=Enter text:, Path=LabelText}" Margin="-5,0,0,0"/>
        <TextBox x:Name="InputTextBox" x:FieldModifier="private" Grid.Row="1" Text="{Binding ElementName=WindowInput, Path=TextBoxText}" MaxHeight="20" KeyDown="InputTextBoxOnKeyDown"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Width="50" Content="{Binding ElementName=WindowInput, Path=ButtonText, TargetNullValue=OK, FallbackValue=OK}" Click="ButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
