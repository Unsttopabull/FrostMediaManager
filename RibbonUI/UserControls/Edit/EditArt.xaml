<UserControl x:Class="RibbonUI.UserControls.Edit.EditArt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="622">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding ElementName=ArtsList, Path=ColumnHeaderHeight}" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,20,0" Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Row="0" ZIndex="2"
                    Background="Transparent">
            <Button Height="{Binding ElementName=ArtsList, Path=ColumnHeaderHeight}" Width="24"
                    Click="RemoveOnClick"
                    Style="{StaticResource TransparentBorderlessButton}" ToolTip="Remove selected art">
                <Image Source="../../Images/remove.png" />
            </Button>
            <Button Height="{Binding ElementName=ArtsList, Path=ColumnHeaderHeight}" Width="24" Click="AddOnClick"
                    Style="{StaticResource TransparentBorderlessButton}" ToolTip="Add new art">
                <Image Source="../../Images/add.png" />
            </Button>
        </StackPanel>
        <DataGrid Grid.Row="0" x:Name="ArtsList" Grid.RowSpan="2" AutoGenerateColumns="False"
                  GridLinesVisibility="None" SelectionMode="Single"
                  DataContext="{Binding ElementName=MovieList, Path=SelectedItem}"
                  AlternatingRowBackground="#59D3D3D3"
                  CanUserResizeColumns="False" CanUserResizeRows="False" ItemsSource="{Binding Arts}"
                  CanUserReorderColumns="False" ClipToBounds="True" MinRowHeight="20"
                  MinColumnWidth="50" RowHeaderWidth="0" CanUserAddRows="False">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Gainsboro" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style BasedOn="{StaticResource NoBorderCell}" TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Gainsboro" />
                            <Setter Property="Foreground" Value="Black" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Preview" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding PreviewOrPath}" Stretch="Uniform" MaxHeight="300" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Type}" Header="Type" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Preview}" Header="Preview" />
                <DataGridTextColumn Binding="{Binding Path}" Header="Path" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>