<UserControl x:Class="RibbonUI.UserControls.List.ListArt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="clr-namespace:Frost.GettextMarkupExtension;assembly=Frost.GettextMarkupExtension"
             xmlns:vm="clr-namespace:RibbonUI.ViewModels.UserControls.List"
             xmlns:models="clr-namespace:Frost.Common.Models;assembly=Frost.Common"
             xmlns:fmm="http://www.frostmediamanager.com/xaml/controls"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="622">
    <UserControl.DataContext>
        <vm:ListArtViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding ElementName=ArtList, Path=ColumnHeaderHeight}" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,20,0" Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Row="0" ZIndex="2"
                    Background="Transparent">
            <fmm:ImageButton Height="{Binding ElementName=ArtList, Path=ColumnHeaderHeight}" Width="24"
                             Command="{Binding RemoveCommand}" CommandParameter="{Binding ElementName=ArtList, Path=SelectedItem}"
                             Style="{StaticResource RemoveButton}" ToolTip="{l:T Remove selected art}"/>
            <fmm:ImageButton Height="{Binding ElementName=ArtList, Path=ColumnHeaderHeight}" Width="24"
                             Command="{Binding AddCommand}" CommandParameter="{Binding ElementName=ArtList, Path=SelectedItem}"
                             Style="{StaticResource AddButton}" ToolTip="{l:T Add new art}"/>
        </StackPanel>
        <DataGrid Grid.Row="0" x:Name="ArtList" Grid.RowSpan="2" AutoGenerateColumns="False"
                  GridLinesVisibility="None" SelectionMode="Single"
                  AlternatingRowBackground="#59D3D3D3" CanUserResizeRows="False"
                  CanUserResizeColumns="False" ItemsSource="{Binding Art}"
                  CanUserReorderColumns="False" ClipToBounds="True" MinRowHeight="20"
                  MinColumnWidth="50" RowHeaderWidth="0" CanUserAddRows="False">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Gainsboro" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style BasedOn="{StaticResource NoBorderCell}" TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Gainsboro" />
                            <Setter Property="Foreground" Value="Black" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="{l:T Preview}" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="models:IArt">
                            <Image Source="{Binding PreviewOrPath}" Stretch="Uniform" MaxHeight="300" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Type}" Header="{l:T Type}" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Preview}" Header="{l:T Preview}" />
                <DataGridTextColumn Binding="{Binding Path}" Header="{l:T Path}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>